.wrap {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  justify-content: center;
  align-items: center;
}
.swiper {
  width: 100vw;
  height: 100vh;
}
.swiper-item {
  position: relative;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper-item-bg {
  width: 750rpx;
}
.invitation-txt {
  position: absolute;
  left: 0;
  right: 0;
  z-index: 1;
  text-align: center;
  pointer-events: none;
}
.invitation-txt image {
  width: 579rpx;
  height: 69rpx;
}
.too-bar {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  width: 80rpx;
  pointer-events: none;
}
.top-header {
  width: 100%;
  pointer-events: none;
}
.music {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  pointer-events: auto;
}
.music-pause .music-icon {
  animation: none;
}
.music-pause .music-play {
  transform: none;
}
.music-icon {
  margin-top: 15rpx;
  width: 60rpx;
  height: 60rpx;
  animation: musicRotate 2s linear infinite;
}
.music-play {
  width: 28rpx;
  height: 60rpx;
  margin-left: -14rpx;
  transform-origin: top;
  transform: rotate(20deg);
}
.album {
  display: flex;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  pointer-events: auto;
}
.album-txt {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255,255,255,0.5);
  font-size: 20rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  color: #333;
  font-weight: bold;
}
.main-content {
  position: absolute;
  bottom: 64rpx;
  left: 90rpx;
  right: 90rpx;
  height: 300rpx;
  background-color: rgba(255,255,255,0.5);
  box-sizing: border-box;
  padding: 10rpx;
}
.content-inner {
  width: 100%;
  height: 100%;
  border: 1rpx solid #333;
  box-sizing: border-box;
  padding: 4rpx;
  position: relative;
}
.content-inner-1 {
  width: 100%;
  height: 100%;
  border: 1rpx solid #333;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.content-title {
  text-align: center;
  font-size: 36rpx;
  color: #333;
}
.content-desc {
  margin-top: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}
.we-are {
  position: absolute;
  bottom: -2rpx;
  left: 15rpx;
  text-align: center;
  width: 520rpx;
}
.we-are image {
  width: 520rpx;
  height: 14rpx;
}

@-webkit-keyframes musicRotate {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg);
  }
}
  