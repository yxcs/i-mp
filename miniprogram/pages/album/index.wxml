<view class="wrap">
  <swiper
    class="swiper"
    indicator-dots="{{false}}"
    autoplay="{{true}}"
    interval="{{3000}}"
    duration="{{500}}"
    circular="{{true}}">
    <block wx:for="{{list}}" wx:key="*this">
      <swiper-item>
        <view class="swiper-item">
          <image src="{{item}}" mode="widthFix" class="swiper-item-bg" />
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>

<view bind:tap="goBack" class="back" style="width: {{backBtnWidth}}px;height: {{backBtnWidth}}px;top: {{backBtnTop}}px;left: {{backBtnLeft}}px;">
  <image src="../../imgs/icon/nav-bar-back.png" />
</view>